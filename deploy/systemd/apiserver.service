[Unit]
Description=SmartFactCheckBot API Server
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/smartfactcheckbot
ExecStart=/home/ubuntu/smartfactcheckbot/venv/bin/uvicorn api_server:app --host 0.0.0.0 --port 8001 --workers 2
Restart=always

[Install]
WantedBy=multi-user.target
